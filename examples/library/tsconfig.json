{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "isolatedModules": false,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitUseStrict": false,
    "noLib": false,
    "outDir": "dist",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5"
  },
  "files": [
    "./typings/index.d.ts",
    "./index.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  }
}
